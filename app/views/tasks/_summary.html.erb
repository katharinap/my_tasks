<h5>Summary</h5>
<% sum = 0 %>
<ul class="list-group">
    <% tasks_by_category = tasks.group_by(&:category) %>
    <% tasks_by_category.keys.sort_by(&:name).each do |category| %>
	<% category_tasks = tasks_by_category[category] %>
	<% days = Task.duration_in_days(category_tasks) %>
	<% sum += days %>
	<li class="list-group-item list-group-item-action">
	    <div class="row">
		<div class="col-3">
		    <%= category_tag(category) %>
		</div>
		<div class="col-3">
		    <%= category.name %>
		</div>
		<div class="col-6">
		    <%= days %> days
		</div>
	    </div>
	</li>
    <% end %>
    <li class="list-group-item list-group-item-action">
	<div class="row">
	    <div class="col-6">
		<i class="fas fa-angle-double-right fa-lg" title="Sum"></i>
	    </div>
	    <div class="col-6">
		<%= sum %> days
	    </div>
	</div>
    </li>
</ul>
